{
  "name": "dentin",
  "version": "0.2.5",
  "description": "(in)dent XML to make it pretty",
  "main": "lib/dentin.js",
  "bin": {
    "dentin": "./bin/dentin"
  },
  "scripts": {
    "coffee": "coffee -cm -o lib/ src",
    "coverage": "istanbul cover nodeunit test/*.coffee",
    "precoverage": "npm run coffee",
    "test": "nodeunit test/*.coffee",
    "pretest": "npm run coffee",
    "prepublish": "npm run coffee",
    "watch": "watch 'npm run coverage' src/",
    "release": "npm version patch && git push --follow-tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hildjj/dentin.git"
  },
  "keywords": [
    "html",
    "xml",
    "pretty",
    "print",
    "indent"
  ],
  "author": "Joe Hildebrand",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/hildjj/dentin/issues"
  },
  "homepage": "https://github.com/hildjj/dentin",
  "dependencies": {
    "commander": "2.9",
    "libxmljs": "0.18",
    "word-wrap": "1.2"
  },
  "devDependencies": {
    "coffee-script": "1.12",
    "istanbul": "^0.4.3",
    "nodeunit": "0.11",
    "source-map-support": "0.4",
    "watch": "1.0"
  }
}
